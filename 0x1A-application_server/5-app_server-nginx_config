# Configures Nginx to serve the route /airbnb-onepage/ from AirBnB_clone_v4.

server {
# Listen on port 80
    listen 80 default_server;
    listen [::]:80 default_server;

# Use IP of server as domain name
    server_name 18.235.248.74;

# Customize HTTP response header
    add_header X-Served-By 452994-web-01;

# Serve /airbnb-onepage/ route from AirBnB_clone_v2
    location /airbnb-onepage {
        proxy_pass http://localhost:5000;
    }

# Serve /number_odd_or_even/ route on AirBnB_clone_v2
    location /airbnb-dynamic/number_odd_or_even/(\d+)${
          proxy_pass http://localhost:5001/airbnb-dynamic/number_odd_or_even/$1;
 }
    root /var/www/html;
    index index.html;
    location /redirect_me {
      return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
   }

# Serve API on AirBnB_clone_v3
    location /api {
        proxy_pass http://localhost:5002/api;
    }

# Configure /2-hbnb route of AirBnB_clone_v4 as root location
    location / {
        proxy_pass http://localhost:5003/2-hbnb;
    }

    # Serve static content for AirBnB_clone_v4
    location /static {
        proxy_pass http://localhost:5003;
    }


# 404 error page
    error_page 404 /404.html;
    location = /404.html{
       internal;
   }
}